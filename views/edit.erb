<h2 class="my-3">変更内容</h2>
<form action="/memos/<%=@id%>/edit" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <div class="form-group">
    <input type="text" name="title" value="<%=@title%>" class="form-control" id="formGroupExampleInput">
  </div>
  <div class="form-group">
    <textarea name="content" rows="5" class="form-control"><%=@content%></textarea>
  </div>
  <button type="submit" class="btn btn-warning btn-lg">変更</button>
</form>
