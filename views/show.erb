<h2 class="my-3">メモ内容</h2>
<div class="border rounded-top border-bottom-0 bg-white py-1">
  <h3 class="m-3"><%= @title %></h3>
</div>
<div class="border rounded-bottom bg-white mb-5">
  <p class="m-3"><%= @content %></p>
</div>
<div class="d-flex">
  <a href="/memos/<%= @id %>/edit" class="btn btn-warning btn-lg mr-5" role="button">修正</a>
  <form action="/memos/<%=@id%>" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-danger btn-lg">削除</button>
  </form>
</div>
